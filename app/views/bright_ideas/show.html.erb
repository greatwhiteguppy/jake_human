<a href="/bright_ideas">Bright Ideas</a>
<p><a href="/users/<%=@bright_idea.user.id%>"><%= @bright_idea.user.alias %></a> says: <input type="text" value="<%= @bright_idea.idea %>">

<h3>People who liked this post:</h3>
<table>
  <thead>
    <th>Alias</th>
    <th>Name</th>
  </thead>
  <tbody>
    <tr>
      <% @bright_idea.liking_users.each do |l| %>
        <td><a href="/users/<%=l.id%>"><%= l.alias %></a> </td>
        <td><%= l.name %> </td>
      <% end %>
    </tbody>
  </table>
