<h1>Welcome!</h1>
<div id="user_registration">
  <form action="/users" method ="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <fieldset>
      <legend><h2>Register</h2></legend>
      <h3>Name: <input type="text" name="user[name]"></h3>
      <h3>Alias: <input type="text" name="user[alias]"></h3>
      <h3>Email: <input type="text" name="user[email]"></h3>
      <h3>Password: <input type="password" name="user[password]"></h3>
      <p>*Password should be at least 8 characters</p>
      <h3>Confirm PW: <input type="password" name="user[password_confirmation]"></h3>
      <input type="submit" name="Register" value="Register">
    </fieldset>
  </form>
</div>
<div id="user_login">
  <form action="/sessions" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <fieldset>
        <legend><h2>Login</h2></legend>
        <h3>Email: <input type="text" name="email"></h3>
        <h3>Password:<input type="password" name="password"> </h3>
        <input type="submit" name="Login" value="Login">
      </fieldset>
  </form>
</div>
